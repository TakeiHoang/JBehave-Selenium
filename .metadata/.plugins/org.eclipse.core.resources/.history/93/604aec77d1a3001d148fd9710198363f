package storyStepDefs;

import org.jbehave.core.annotations.*;

import core.pages.Pages;
import core.selenium.SeleniumHelper;
import junit.framework.Assert;

public class GoogleStepDefs {
	public Pages pages;
	public SeleniumHelper helper;
	private String user;

	public GoogleStepDefs() {
		this.pages = new Pages();
	}

	@Given("I am on google home page")
	public void openHomePage() {
		pages.homePage().openHomePage();
	}

	@When("I navigate to registration page")
	public void goToRegistrationPage() {
		pages.registrationPage().open();
	}

	@When("I login as $user")
	public void loginAs(String user) {
		this.user = user;
		pages.loginPage().login(user);
	}

	@Then("I am logged in")
	public void userIsLoggedIn() {
		Assert.assertEquals(pages.loginPage().getLoggedinUserName(), new LoginData().getUserName(user));
	}
}
