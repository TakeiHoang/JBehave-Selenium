package storyStepDefs;

import org.jbehave.core.annotations.*;

import core.pages.Pages;
import core.selenium.SeleniumHelper;
import junit.framework.Assert;

public class GoogleStepDefs {
	public Pages pages;
	public SeleniumHelper helper;
	private String user;

	public GoogleStepDefs() {
		this.pages = new Pages();
	}

	@Given("I am on google home page")
	public void openHomePage() {
		pages.homePage().openHomePage();
	}

	@When("I enter <searchText> and submit")
	public void loginAs(@Named("searchText") String searchText) {
		
	}

	@Then("I am logged in")
	public void userIsLoggedIn(String expectedResult) {
		Assert.assertEquals(pages.resultPage().getLoggedinUserName(), new LoginData().getUserName(user));
	}
}
